<!DOCTYPE html>

<html lang="bg">
<head>
	<meta name="viewport" content="width=device-width" />
	<script src="~lib/jquery/jquery.js"></script>
	<script src="~lib/bootstrap/js/bootsrap.js"></script>    
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
	<base href="/" />
	<title>@ViewBag.Title</title>
</head>
<body>
    <style>
        body {
            background-color: #1f1f1f;
        }
        .aImg { <!--- Making the <a> line invisible -->
            outline: none;
            text-decoration: none;
        }
    </style>
    <nav class="navbar fixed-top bg-dark border-bottom border-body" data-bs-theme="dark">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <div style="margin-top: 3px" class="d-flex align-items-center">
                <!-- This will be adjusted when we make modifications to the logo -->
                <a class="aImg" href="@Url.Action("Index", "Home")">
                    <img style="margin-bottom: 6%" src="https://getbootstrap.com/docs/5.3/assets/brand/bootstrap-logo.svg" alt="Bootstrap" width="30" height="24">
                    <!-- This will be adjusted when we make modifications to the logo -->
                </a>
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">Navbar</a>
            
            <a class="navbar-brand" href="#">Phones</a>
            <a class="navbar-brand" href="@Url.Action("AboutUs", "Extra")">About Us</a>
            </div>
            <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
        </div>
    </nav>
    @RenderBody()
</body>
</html>