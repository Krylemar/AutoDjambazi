<!DOCTYPE html>
<html lang="bg">
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<script src="~lib/jquery/jquery.js"></script>
	<script src="~lib/bootstrap/js/bootsrap.js"></script>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
	<link href="~/css/site.css" rel="stylesheet" />
	<title>@ViewBag.Title</title>
</head>
<body>
	<div class="container pt-4">
		<header>
			<nav class="navbar navbar-expand-lg bg-dark fixed-top" data-bs-theme="dark">
				<div class="container-xl">
					<div style="margin-top: 3px" class="d-flex align-items-center">
						<a class="aImg" asp-controller="Home" asp-action="Index">
							<!--<img src="~/img/mobiphony.png" alt="Alternate Text" style="width: 100px; height:100px;"/>-->
							<i class="bi bi-phone text-success me-2 h3"></i>
						</a>
						<a class="navbar-brand" asp-controller="Home" asp-action="Index">Mobiphony</a>

						<a class="navbar-brand" asp-controller="Phones" asp-action="AddPhone">Add Phones</a>
						<a class="navbar-brand" asp-controller="Phones" asp-action="PhoneView">Phone</a><!-- Will Remove Later ! -->
						<a class="navbar-brand" asp-controller="Phones" asp-action="Phones">Phones</a>
						<a class="navbar-brand" asp-controller="Home" asp-action="AboutUs">About Us</a>
					</div>
					<form class="d-flex" role="search">
						<input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
						<button class="btn btn-outline-success" type="submit">Search</button>
					</form>
				</div>					
				<a class="button" asp-controller="Filter" asp-action="Filter">
						<div type="button" class="btn btn-outline-success me-4">Filters</div>
				</a>

			</nav>
		</header>
	</div>
	@RenderBody()
	<footer class="bg-dark static-bottom text-center text-white mt-5">
		<div class="container p-4 pb-0">
			<section class="mb-4">
				<!-- Github -->
				<a class="btn btn-outline-light btn-floating m-1" href="https://github.com/Krylemar/Mobiphony" role="button">
					<i class="bi bi-github"></i> Project Repository
				</a>
			</section>
		</div>
		<div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
			© 2024 Copyright:
			<a class="text-white" href="">Mobiphony</a>
		</div>
	</footer>
</body>
</html>
