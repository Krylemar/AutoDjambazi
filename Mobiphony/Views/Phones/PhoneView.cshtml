                                </svg>
                                <br />
                                @Model.InternalStorage GB
                            </td>
                        </tr>
                        <tr>
                            <td class="ps-3" colspan="1" style="width: 100px;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-battery" viewBox="0 0 16 16">
